

@model BookVM

<form method="post" enctype="multipart/form-data">
    <input asp-for="Book.Id" hidden="hidden"/>
    <input asp-for="Book.ImageUrl" hidden="hidden"/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
        </div>

        @*<div asp-validation-summary="All"></div>*@
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3">
            <label asp-for="Book.Title" class=""></label>
            <input asp-for="Book.Title" class="form-control"/>
            <span asp-validation-for="Book.Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Book.Author" class=""></label>
            <input asp-for="Book.Author" class="form-control"/>
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Book.Publication" class=""></label>
            <input asp-for="@Model.Book.Publication" class="form-control"/>
            <span asp-validation-for="@Model.Book.Publication" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Book.CategoryId" class=""></label>
            <select asp-for="@Model.Book.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                <option disabled selected="">--Selected Items</option>
            </select>
            <span asp-validation-for="@Model.Book.CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Book.ImageUrl" class=""></label>
            <input type="file" name="file" class="form-control"/>

        </div>





        <button class="btn  btn-primary" type="submit">Insert</button>

        <a asp-controller="Category" asp-action="Index">Go back</a>

        <div class="col-3">
            <img src="@Model.Book.ImageUrl" width="100%"/>
        </div>
    </div>
</form>
